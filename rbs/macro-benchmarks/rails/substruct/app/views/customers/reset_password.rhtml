<div id="fullContent">
	
	<h1><%= @title %></h1>
	<%= form_tag :action => 'reset_password' %>
		<div class="form_block">
			<input type="hidden" name="modal" value="<%= params[:modal] %>" />
			<p>
				<%= make_label('Your e-mail address', true) %>
				<input type="text" class="textInput" size="40" name="login" value="<%= params[:login] %>" />
			</p>

		  <div class="line">&nbsp;</div>

	    <p>
	      <%= submit_tag "Reset and email password", :class => 'button twohundred' %>
	      <div class="clear">&nbsp;</div>
	    </p>
		
		</div>
	</form>
</div>

<div class="clear"></div>