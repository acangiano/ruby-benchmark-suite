<div id="left">
  <h1><%= @title %></h1>

  <table class="list" cellpadding="0" cellspacing="0">
  <tr>
    <th>Role</th>
		<th>Description</th>
		<th>Rights</th>
  </tr>
  <% for role in @roles %>
  <tr class="<%= alternate %>">
    <td><%= link_to role.name, :action => 'edit', :id => role %></td>
		<td><%= get_markdown(role.description) %>
		<td>
			<% for right in role.rights %>
				<%= right.name %><br/>
			<% end %>
		</td>
  </tr>
  <% end %>
  </table>
</div>


<%= render(:partial => 'right_side') %>
