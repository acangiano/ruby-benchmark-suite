<h1>Listing order_addresses</h1>

<table>
  <tr>
  <% for column in OrderAddress.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for order_address in @order_addresses %>
  <tr>
  <% for column in OrderAddress.content_columns %>
    <td><%=h order_address.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => order_address %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => order_address %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => order_address }, :confirm => 'Are you sure?' %></td>
  </tr>
<% end %>
</table>

<%= link_to 'Previous page', { :page => @order_address_pages.current.previous } if @order_address_pages.current.previous %>
<%= link_to 'Next page', { :page => @order_address_pages.current.next } if @order_address_pages.current.next %> 

<br />

<%= link_to 'New order_address', :action => 'new' %>
